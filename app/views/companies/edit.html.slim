- set_meta_tags noindex: true
.tops-wrapper
  h2.headline
    | 記事編集
= render 'form'
table.company[width="100%"]
  = form_for([@company, @introduction]) do |f|
    tbody
      tr 
        th
          | 概要
      tr.ceter
        td
          = f.text_area :body
      tr
        td
          = f.submit "登録"
table.company[width="100%"]
  = form_for([@company, @branch]) do |f|
    tbody
      tr 
        th[colspan="6"]
          | 支店
      tr.ceter
        th 支店名
        td  = f.text_field :name
        th 電話番号
        td  = f.telephone_field :tel
        th　住所
        td = f.text_field :address
      tr
        td[colspan="6"]
          = f.submit "登録"
table.company[width="100%"]
  = form_for([@company, @history]) do |f|
    tbody
      tr 
        th[colspan="4"]
          | 沿革
      tr.ceter
        th 年月日
        td  = f.date_field :year
        th 内容
        td  = f.text_area :body
      tr
        td[colspan="4"]
          = f.submit "登録"
